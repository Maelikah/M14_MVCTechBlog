<div class="container">
    <div class="columns">
        <div class="column">
            <div class="card">
            <div class="card-content">
                <h2 class="title is-2">Signup</h2>
                <form class="signup-form">
                <div class="field">
                    <label class="label is-size-4" for="username-signup">Username:</label>
                    <div class="control">
                    <input class="input" type="text" id="username-signup" />
                    </div>
                </div>
                <div class="field">
                    <label class="label is-size-4" for="email-signup">Email:</label>
                    <div class="control">
                    <input class="input" type="text" id="email-signup" />
                    </div>
                </div>
                <div class="field">
                    <label class="label is-size-4" for="password-signup">Password:</label>
                    <div class="control">
                    <input class="input" type="password" id="password-signup" />
                    </div>
                </div>
                <div class="field">
                    <div class="control has-text-centered">
                    <button class="button navheader is-size-5 custom-box mr-4" type="submit">Signup</button>
                    <a class="button navheader is-size-5 custom-box mr-4" href="/login">Login</a>
                    </div>
                </div>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>
<script src="./js/signup.js"></script>

