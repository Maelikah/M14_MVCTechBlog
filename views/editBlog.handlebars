<div class="has-text-centered" id="blogbox">
    <div class="columns">
        <div class="column">
            <div class="row">
                <div class="col-auto">
                    <h2 class="h2 is-size-3 has-text-weight-bold" >Edit Blog post</h2>
                    <br>
                </div>
            </div>
            <form class="form edit-blog-form">
                <div class="field">
                    <label class="label h2 is-size-5 has-text-weight-bold" for="blog-name">Title:</label>
                    <div class="control">
                        <input class="input" type="text" id="blog-name" name="blog-name" value="{{blog.title}}" />
                    </div>
                </div>
                <p class="has-text-right has-text-weight-bold" >Blog post by: {{user.username}} on {{format_date createdAt}}</p>
                <div class="field">
                    <label class="label h2 is-size-5 has-text-weight-bold" for="blog-desc">Content:</label>
                    <div class="control">
                        <textarea class="textarea" id="blog-desc" name="blog-desc">{{blog.content}}</textarea>
                        <input id="hiddenblogID" hidden="true" value="{{blog.id}}"></input>
                        <br>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button navheader is-size-5 custom-box">Edit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/editBlog.js"></script>